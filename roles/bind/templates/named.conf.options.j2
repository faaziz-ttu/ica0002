acl trusted { {{ local_network }}; {{ localhost }}; {{ docker_network }};  }; 

options {
	directory "/var/cache/bind";
	forwarders {
      {% for f in dns_forwarders %}
	    {{ f }};
      {% endfor %}
	};
	allow-query { trusted; };
	dnssec-validation no;
	auth-nxdomain no;
};

statistics-channels {
           inet 127.0.0.1 port 8053 allow { 127.0.0.1; };
};
