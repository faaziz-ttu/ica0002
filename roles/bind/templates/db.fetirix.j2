$TTL	604800
{% for vm in groups['dns_primary'] %}
{{ fqdn }}.	IN	SOA	{{ fqdn }}. farid.{{ fqdn }}. (
			      2		; Serial
			 604800		; Refresh
			  86400		; Retry
			2419200		; Expire
			 604800 )	; Negative Cache TTL
;
{% endfor %}
{% for vm in groups['dns_servers'] %}
{{ fqdn }}.	IN	NS	{{ vm }}.{{fqdn}}.
{% endfor %}

{% for vm in hostvars %}
{{ hostvars[vm]['inventory_hostname'] }}	IN	A	{{ hostvars[vm]['ansible_default_ipv4']['address'] }}
{% endfor %}
{{backup_server}} IN A {{backup_address}}
