global:
  scrape_interval:     15s # By default, scrape targets every 15 seconds.
  scrape_timeout:      10s # By default, scrape targets every 10 seconds.
  evaluation_interval: 15s # By default, scrape targets every 15 seconds.

scrape_configs:

  - job_name: prometheus
    honor_timestamps: true
    scrape_interval: 5s
    scrape_timeout: 5s
    metrics_path: /prometheus/metrics
    scheme: http
    static_configs:
    - targets:
      - localhost:9090
        
  - job_name: linux
    honor_timestamps: true
    scrape_interval: 15s
    scrape_timeout: 10s
    metrics_path: /metrics
    scheme: http
    static_configs:
      - targets: 
        - 'faaziz-ttu-1.{{ fqdn }}:9100'
        - 'faaziz-ttu-2.{{ fqdn }}:9100'
        - 'faaziz-ttu-3.{{ fqdn }}:9100'

  - job_name: bind9
    static_configs:
      - targets:
{% for vm in groups['init'] %}
          - {{ vm }}:{{ prometheus_exporters['bind']['port'] }}
{% endfor %}

  - job_name: mysql
    static_configs:
      - targets:
{% for vm in groups['db_servers'] %}
        - {{ vm }}:{{ prometheus_exporters['mysql']['port'] }}
{% endfor %}

  - job_name: nginx
    static_configs:
      - targets:
{% for vm in groups['all'] %}
        - {{ vm }}:{{ prometheus_exporters['nginx']['port'] }}
{% endfor %}

  - job_name: influxdb
    static_configs:
      - targets:
{% for vm in groups['influxdb'] %}
        - {{ vm }}:{{ prometheus_exporters['influxdb']['port'] }}
{% endfor %}
  - job_name: haproxy
    static_configs:
      - targets:
{% for vm in groups['haproxy'] %}
        - {{ vm }}:{{ prometheus_exporters['haproxy']['port'] }}
{% endfor %}

  - job_name: keepalived
    static_configs:
      - targets:
{% for vm in groups['haproxy'] %}
        - {{ vm }}:{{ prometheus_exporters['keepalived']['port'] }}
{% endfor %}
